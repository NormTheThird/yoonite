<div id="admin-skill-list" class="container-fluid">
    <div class="box">
        <div class="box-inner">
            <div class="table-wrapper">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="min-width no-wrap">ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="min-width center">Active</th>
                            <th class="min-width no-wrap">Date Created</th>
                            <th class="min-width no-wrap">    
                            <input type="button" class="btn btn-outline-primary" value="New Skill" data-bind="click: NewSkill" />
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: Skills()">
                        <tr>
                            <td class="min-width no-wrap" data-bind="text: Id" />
                            <td data-bind="text: Name, visible: !IsEdit()" />
                            <td data-bind="visible: IsEdit()"><input type="text" class="form-control" data-bind="value: Name" /></td>
                            <td data-bind="text: Description, visible: !IsEdit()" />
                            <td data-bind="visible: IsEdit()"><input type="text" class="form-control" data-bind="value: Description" /></td>
                            <td class="min-width center status" data-bind="visible: !IsEdit()">
                                <i class="fa fa-check" data-bind="visible: IsActive()"></i>
                                <i class="fa fa-times" data-bind="visible: !IsActive()"></i>
                            </td>
                            <td class="min-width center status" data-bind="visible: IsEdit()">
                                <div class="checkbox-wrapper">
                                    <input type="checkbox" data-bind="checked: IsActive" />
                                    <span class="indicator"></span>
                                </div>
                            </td>
                            <td class="min-width no-wrap" data-bind="text: DateCreated" />
                            <td class="min-width no-wrap">
                                <input type="button" class="btn btn-outline-secondary" value="Edit Skill" data-bind="click: $parent.EditSkill, visible: !IsEdit()" />
                                <input type="button" class="btn btn-primary" value="Save" data-bind="click: $parent.SaveSkill, visible: IsEdit()" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
