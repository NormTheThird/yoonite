<div id="project-detail" style="display:none">
    <div class="page-title">
        <div class="container">
            <h1>
                <a href="#" data-bind="click: BackToProjectList" title="Back to project list" class="admin-page-title-back">
                    <i class="fa fa-long-arrow-left fa-2x"></i>
                </a>Project Detail
            </h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="listing-detail col-12">
                <div class="listing-user">
                    <a class="avatar" data-bind="text: Project().Initials"></a>
                    <div class="listing-user-title">
                        <h2 data-bind="text: Project().ProjectName"></h2>
                        <h3 data-bind="text: Project().CityStateDisplay"></h3>
                    </div>
                    @*<ul class="social">
                            <li data-bind="visible: User().FacebookUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().FacebookUrl() }"><i class="fa fa-facebook"></i></a></li>
                            <li data-bind="visible: User().TwitterUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().TwitterUrl() }"><i class="fa fa-twitter"></i></a></li>
                            <li data-bind="visible: User().LinkedinUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().LinkedinUrl() }"><i class="fa fa-linkedin"></i></a></li>
                            <li data-bind="visible: User().InstagramUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().InstagramUrl() }"><i class="fa fa-instagram"></i></a></li>
                        </ul>*@
                </div>
                <div class="row">
                    <div class="col-lg-5">
                        <div class="overview">
                            <h3 class="page-title-small">Information</h3>
                            <ul>
                                <li>
                                    <strong>Owner Name</strong>
                                    <span data-bind="text: ProjectOwner().FullName"></span>
                                </li>
                                <li>
                                    <strong>Company Name</strong>
                                    <span data-bind="text: Project().CompanyName"></span>
                                </li>
                                <li>
                                    <strong>Phone</strong>
                                    <span data-bind="text: ProjectOwner().PhoneNumber.PhoneMask()"></span>
                                </li>
                                <li data-bind="visible: ProjectOwner().AltPhoneNumber()">
                                    <strong>Alt. Phone</strong>
                                    <span data-bind="text: ProjectOwner().AltPhoneNumber.PhoneMask()"></span>
                                </li>
                                <li>
                                    <strong>E-mail</strong>
                                    <span><a href="#" data-bind="text: ProjectOwner().Email(), attr: { href: 'mailto:' + ProjectOwner().Email() }"></a></span>
                                </li>
                                <li>
                                    <strong>Project Url</strong>
                                    <span><a data-bind="text: Project().Url(), attr: { href: Project().Url(), target: '_blank' }"></a></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <h3 class="page-title-small">Description</h3>
                        <p class="mb30" data-bind="text: Project().Description"></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="page-title-small">Skills Needed</h3>
                        <div data-bind="foreach: Project().ProjectSkills">
                            <span class="tag tag-outline-primary" data-bind="text: Name"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="box">
                    <div class="box-inner">
                        <div class="box-title">
                            <h2>Contact Project Owner</h2>
                        </div>
                        <form id="contact-owner-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Subject *</label>
                                        <input id="Subject" name="Subject" type="text" class="form-control" data-bind="value: OwnerMessage().Subject">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Message *</label>
                                        <textarea id="Message" name="Message" class="form-control" rows="10" placeholder="Please keep your message as simple as possible." data-bind="value: OwnerMessage().Message"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group-btn">
                                        <button class="btn btn-primary pull-right" data-bind="click: ContactOwner">Send Message</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>