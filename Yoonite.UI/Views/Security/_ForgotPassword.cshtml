<div id="security-forgot-password" class="container" style="display: none">
    <div class="row mt80">
        <div class="col-sm-4 offset-sm-4">
            <div class="row login-logo">
                <div style="margin: auto">
                    <img src="~/Content/img/logo.svg" class="svg" alt="Home" />
                    <a href="@Url.Action("Index", "Home")" class="header-title">Yoonite</a>
                </div>
            </div>
            <h3 class="page-title-small mt80">Reset Password</h3>
            <form>
                <div class="form-group">
                    <h4 class="text-danger text-center" data-bind="text: ErrorMessage"></h4>
                </div>
                <div class="form-group">
                    <label for="">E-mail Address</label>
                    <input type="text" class="form-control" data-bind="value: Email">
                </div>
                <div class="form-group-btn">
                    <button class="btn btn-primary btn-block" data-bind="click: ForgotPassword">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>