<div id="user-detail" style="display:none">
    <div class="page-title">
        <div class="container">
            <h1>
                <a href="#" data-bind="click: BackToUserList" title="Back to user list" class="admin-page-title-back">
                    <i class="fa fa-long-arrow-left fa-2x"></i>
                </a>User Detail
            </h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="listing-detail col-12">
                <div class="listing-user">
                    <a class="avatar" data-bind="text: User().Initials"></a>
                    <div class="listing-user-title">
                        <h2 data-bind="text: User().FullName"></h2>
                        <h3 data-bind="text: User().Address().CityStateDisplay"></h3>
                    </div>
                    <ul class="social">
                        <li data-bind="visible: User().FacebookUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().FacebookUrl() }"><i class="fa fa-facebook"></i></a></li>
                        <li data-bind="visible: User().TwitterUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().TwitterUrl() }"><i class="fa fa-twitter"></i></a></li>
                        <li data-bind="visible: User().LinkedinUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().LinkedinUrl() }"><i class="fa fa-linkedin"></i></a></li>
                        <li data-bind="visible: User().InstagramUrl()"><a href="#" target="_blank" data-bind="attr: { href: User().InstagramUrl() }"><i class="fa fa-instagram"></i></a></li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-lg-5">
                        <div class="overview">
                            <h3 class="page-title-small">Information</h3>
                            <ul>
                                <li>
                                    <strong>Phone</strong>
                                    <span data-bind="text: User().PhoneNumber.PhoneMask()"></span>
                                </li>
                                <li data-bind="visible: User().AltPhoneNumber()">
                                    <strong>Alt. Phone</strong>
                                    <span data-bind="text: User().AltPhoneNumber.PhoneMask()"></span>
                                </li>
                                <li>
                                    <strong>E-mail</strong>
                                    <span><a href="#" data-bind="text: User().Email(), attr: { href: 'mailto:' + User().Email() }"></a></span>
                                </li>
                                <li data-bind="visible: User().WebsiteUrl()">
                                    <strong>Website</strong>
                                    <span><a href="#" target="_blank" data-bind="text: User().WebsiteUrl(), attr: { href: User().WebsiteUrl() }"></a></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <h3 class="page-title-small">About <span data-bind="text: User().Name"></span></h3>
                        <p class="mb30" data-bind="text: User().Bio"></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="page-title-small">Skills</h3>
                        <div data-bind="foreach: User().Skills">
                            <span class="tag tag-outline-primary" data-bind="text: Name"></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="box">
                    <div class="box-inner">
                        <div class="box-title">
                            <h2>Contact User</h2>
                        </div>
                        <form id="contact-user-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Subject *</label>
                                        <input id="Subject" name="Subject" type="text" class="form-control" data-bind="value: UserMessage().Subject">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label>Message *</label>
                                        <textarea id="Message" name="Message" class="form-control" rows="10" placeholder="Please keep your message as simple as possible." data-bind="value: UserMessage().Message"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group-btn">
                                        <button class="btn btn-primary pull-right" data-bind="click: ContactUser">Send Message</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>